# Oil & Gas Document Translator - Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# MODE SELECTION
# =============================================================================
# Options: self_hosted (free), budget (~$3/doc), premium (best quality)
TRANSLATION_MODE=self_hosted

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=false
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# =============================================================================
# FILE HANDLING
# =============================================================================
MAX_FILE_SIZE_MB=600
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
TEMP_DIR=./temp

# =============================================================================
# DATABASE (SQLite for simplicity, PostgreSQL for production)
# =============================================================================
DATABASE_URL=sqlite:///translator.db
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SELF-HOSTED MODE (Free - $0)
# Uses NLLB for translation, PaddleOCR for OCR
# =============================================================================

# NLLB Settings (CPU-friendly translation model)
NLLB_MODEL=facebook/nllb-200-distilled-600M
NLLB_DEVICE=cpu
NLLB_BATCH_SIZE=4

# Ollama Settings (alternative, needs GPU for good speed)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# =============================================================================
# BUDGET MODE (~$3/document)
# Uses DeepSeek API for translation, PaddleOCR for OCR
# =============================================================================

# DeepSeek API - Get free 5M tokens at https://platform.deepseek.com
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# =============================================================================
# PREMIUM MODE (Best Quality)
# Uses Claude for translation, Azure Document Intelligence for OCR
# =============================================================================

# Azure Document Intelligence - https://azure.microsoft.com/en-us/products/ai-services/document-intelligence
AZURE_DOC_ENDPOINT=
AZURE_DOC_KEY=

# Anthropic Claude - https://console.anthropic.com
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI (alternative) - https://platform.openai.com
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# =============================================================================
# PROCESSING SETTINGS
# =============================================================================
CHUNK_SIZE=1000
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT_MINUTES=60

# =============================================================================
# GLOSSARY
# =============================================================================
GLOSSARY_PATH=./glossary/oilgas_terminology.json

